@using ClientSupportSystem.DTOs
@using ClientSupportSystem.Enums
@model TicketsViewModel
@{
    ViewData["Title"] = "Tickets Page";
}

<div class="text-center">

    <!-- Add ticket button -->
    <br />
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Ticket" asp-action="Create">Create New Ticket</a>
    </div>
    <br />

    @if (TempData["SuccessMessage"] != null)
    {
        <!-- Alert Success -->
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <!-- Alert Error -->
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["ErrorMessage"]
        </div>
    }
    <br />



    <h1 class="display-4">Tickets List</h1>

    <table class="table" id="tickets-table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Category</th>
                <th scope="col">Priority</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <!-- Show all tickets registereds -->
            @if (Model != null && Model.Tickets.Any())
            {
                foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <th scope="row">@ticket.Id</th>
                        <td>@ticket.Title</td>
                        <td>@ticket.Description</td>
                        <td>@Enum.GetName(typeof(StatusEnum), @ticket.Status)</td>
                        <td>@Enum.GetName(typeof(CategoryEnum), @ticket.Category)</td>
                        <td>@Enum.GetName(typeof(PriorityEnum), @ticket.Priority)</td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (Model.UserRole == ClientSupportSystem.Enums.RoleEnum.AGENT || Model.UserRole == ClientSupportSystem.Enums.RoleEnum.ADMIN)
                                {
                                    <a role="button" class="btn btn-primary" asp-route-id="@ticket.Id" asp-controller="Ticket" asp-action="Edit">Edit</a>
                                    <a role="button" class="btn btn-secondary" asp-route-id="@ticket.Id" asp-controller="Ticket" asp-action="DeleteConfirm">Delete</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd"><td valing="top" colspan="5">No tickets registered</td></tr>
            }

        </tbody>

    </table>

</div>
