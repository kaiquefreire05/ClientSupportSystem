@model CustomerSupportSystem.DTOs.FeedbackDto
@{
    ViewData["Title"] = "Edit Feedback";
}

<div class="text-center">
    <h1 class="display-4">Edit Feedback</h1>
</div>

<form asp-controller="Feedback" asp-action="Edit" method="post">

    <div class="form-group">
        <label for="rating" class="form-label">Rating (0 to 10)</label>
        <input type="number" asp-for="Rating" class="form-control" min="0" max="10" placeholder="Enter a rating from 0 to 10">
        @Html.ValidationMessageFor(x => x.Rating) <!-- Error message -->
    </div>

    <div class="form-group">
        <label for="comments-text" class="form-label">Comment</label>
        <input type="text" asp-for="Comments" class="form-control" placeholder="Entry the comment">
        @Html.ValidationMessageFor(x => x.Comments) <!-- Error message -->
    </div>

    <br/>
    <!-- Update and Remove Button -->
    <button type="submit" asp-for-id="Model.Id" class="btn btn-primary btn-block">Submit</button>
    <a role="button" class="btn btn-secondary btn-block" asp-controller="Ticket" asp-action="ClosedTickets">Return</a>

</form>