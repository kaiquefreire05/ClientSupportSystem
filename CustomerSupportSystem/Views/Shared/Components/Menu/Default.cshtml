@using CustomerSupportSystem.Enums
@model UserModel

<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hello, @Model.Name</a>

<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Ticket" asp-action="Index">Tickets</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Feedback" asp-action="Index">Tickets with Feedbacks</a>
        </li>

        <!-- Condition to only show "Users" if the profile is Admin -->
        @if (Model.Role == RoleEnum.ADMIN)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Feedback" asp-action="AllFeedbacks">Feedbacks</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Knowledge" asp-action="Index">Knowledge Base</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="ChangePassword" asp-action="Index">Change Password</a>
        </li>

        <li class="nav-item">
            <form asp-controller="Login" asp-action="Logout" method="post" onsubmit="return confirm('Are you sure you want to log out?');">
                <button type="submit" class="nav-link text-dark" style="border: none; background: none; cursor: pointer;">Logout</button>
            </form>
        </li>

    </ul>
</div>